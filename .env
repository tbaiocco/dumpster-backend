# Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database (from Supabase connection pooling - might not be strictly needed with Supabase JS client, but good to have)
DATABASE_URL=postgresql://postgres:your_password@your_project_id.supabase.co:6543/postgres

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Anthropic Claude (Primary AI)
ANTHROPIC_API_KEY=your_claude_api_key

# Google Cloud (For Speech-to-Text and Vision)
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json # Path to your downloaded JSON key file
# Alternatively, you can set the key content directly as an environment variable if preferred
# GOOGLE_CLOUD_PROJECT_ID=your_project_id (if not inferred from credentials)

# Application
PORT=3000
NODE_ENV=development

# Webhook URL (will be set after Railway deployment)
WEBHOOK_URL=https://your-app.railway.app